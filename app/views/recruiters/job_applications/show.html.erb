<p id="notice"><%= notice %></p>
<div class="container" style="margin-top: 50px">
  <div class="row">
    <div class="col-sm-12 well">
      <div class="row">
        <div class="col-sm-12 form-group">
        <h3><b>Job Title : </b><%=@job_application.job_ad.title %></h3>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-12 form-group">
         <h5><b>Company Name :</b> <%=@job_application.job_ad.industry %> </h5>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-12 form-group">
         <h5><b>Require Experience :</b> <%=@job_application.job_ad.req_experience %></h5>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-12 form-group">
          <h5><b>City : </b><%=@job_application.job_ad.city %> </h5>
        </div> 
      </div>
      <div class="row">
        <div class="col-sm-12 form-group">
         <h5><b>Key Skills : </b><%=@job_application.job_ad.key_skills %> </h5>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-12 form-group">
         <h5><b>Company Owner : </b><%=@job_application.job_ad.owner_name %> </h5>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-12 form-group">
         <h5><b>Email : </b><%=@job_application.job_ad.email %> </h5>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-12 form-group">
        <h5><b>Job Details : </b><%=@job_application.job_ad.job_details %> </h5>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-12 form-group">
         <h4><b>Job Seeker's Resume : </b><%= link_to "Download Resume", @job_application.resume_url %> </h4>
        </div>
      </div>
    </div>
  </div>
</div>