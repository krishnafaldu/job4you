<div class="container" style="margin-top: 50px">
  <div class="row">
    <div class="col-sm-12 well">
      <div class="row">
        <div class="col-sm-10 form-group">
        <h3><b>Job Title : </b><%=@job_ad.title %></h3>
        </div>
        <%if current_recruiter %>
          <div class="col-sm-2 form-group" align="right">
            <a href="<%=  edit_recruiters_job_ad_path(@job_ad)%>"><span class="fa fa-pencil-square-o">Edit profile</span></a>
          </div>
        <%end%>
      </div>
      <div class="row">
        <div class="col-sm-12 form-group">
         <h5><b>Company Name :</b> <%=@job_ad.industry %> </h5>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-12 form-group">
         <h5><b>Require Experience :</b> <%=@job_ad.req_experience %></h5>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-12 form-group">
          <h5><b>City : </b><%=@job_ad.city %> </h5>
        </div> 
      </div>
      <div class="row">
        <div class="col-sm-12 form-group">
         <h5><b>Key Skills : </b><%=@job_ad.key_skills %> </h5>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-12 form-group">
         <h5><b>Company Owner : </b><%=@job_ad.owner_name %> </h5>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-12 form-group">
         <h5><b>Email : </b><%=@job_ad.email %> </h5>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-12 form-group">
          <h5><b>Job Details : </b><%=@job_ad.job_details %> </h5>
        </div>
      </div>
      <%if current_job_seeker %>
        <%=link_to 'Apply Now', new_job_seekers_job_application_path(j_id: @job_ad), class: "btn btn-lg btn-info"%>
      <%end%>
    </div>
  </div>
  <div class="row"> 
    <div class="col-sm-12 well">
      <div class="row" style="height: 291px">
        <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCmxxHmWQYP21Cs1YPQSQqZUQgXW1LCwlA"></script>
        <input id="address" type="hidden" value="<%=@job_ad.city %>">
        <div id="map-canvas"></div>
      </div>
    </div>
  </div>
</div>
<script>
  google.maps.event.addDomListener(window, 'load', initialize);
</script>


